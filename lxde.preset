_de="lxde"
_dm="lxdm"

# set the output name
OUTPUT="venom-lxde-$(date +"%Y%m%d").iso"

# set extra packages need to include into iso
EXTRA_PKGS="xorg xorg-video-drivers xf86-input-libinput $_de $_dm pm-utils sudo scrot gimp firefox hexchat transmission-gtk"
EXTRA_PKGS="$EXTRA_PKGS audacious audacious-plugins smplayer vlc alsa-utils pulseaudio jack simplescreenrecorder ntp"
EXTRA_PKGS="$EXTRA_PKGS gparted dosfstools mtools cantarell-fonts liberation-fonts git libmtp gvfs linux-firmware networkmanager"
EXTRA_PKGS="$EXTRA_PKGS ntfs-3g neofetch rsync xdg-user-dirs network-manager-applet os-prober libwebp blueman btrfs-progs reiserfsprogs xfsprogs"

